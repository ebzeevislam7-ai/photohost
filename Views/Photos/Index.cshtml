@using Microsoft.AspNetCore.Identity
@inject SignInManager<PhotoHost.Models.AppUser> SignInManager
@inject UserManager<PhotoHost.Models.AppUser> UserManager

@model List<PhotoHost.Models.Photo>

@{
    ViewData["Title"] = ViewBag.Title ?? "Photohost";
    var user = await UserManager.GetUserAsync(User);
}

<!doctype html>
<html lang="ru">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>@ViewData["Title"]</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
        <style>
            body { background: #f8f9fa; }
            .navbar-brand { font-weight: 600; }
            .app-shell { max-width:1100px; margin:32px auto; }
            .card-upload { border-radius:12px; box-shadow:0 4px 15px rgba(0,0,0,0.08); }
            .photo-grid img { width:100%; height:200px; object-fit:cover; border-radius:8px; }
            .btn-primary { background:linear-gradient(135deg,#667eea,#764ba2); border:0 }
            .preview-list img { max-width:120px; max-height:80px; object-fit:cover; margin-right:8px; border-radius:6px }
        </style>
    </head>
    <body>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Photos")">üì∏ PhotoHost</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse ms-auto" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Profile", "Account")">üë§ @(user?.FirstName ?? "–ü—Ä–æ—Ñ–∏–ª—å")</a>
                            </li>
                            <li class="nav-item">
                                <form method="post" action="@Url.Action("Logout", "Account")" class="d-inline">
                                    <button class="nav-link btn btn-link" type="submit">–í—ã—Ö–æ–¥</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Account")">–í—Ö–æ–¥</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Account")">–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container app-shell">
            <!-- Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Upload Form (visible only for authenticated users) -->
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="card card-upload mb-4 p-4">
                    <h5 class="mb-3">–ó–∞–≥—Ä—É–∑–∏—Ç—å —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–∏</h5>
                    <form id="uploadForm" method="post" action="@Url.Action("Upload")" enctype="multipart/form-data">
                        <div class="row g-3 align-items-center">
                            <div class="col-lg-8">
                                <label class="form-label">–í—ã–±–µ—Ä–∏—Ç–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è (.jpg, .jpeg, .png)</label>
                                <input class="form-control" type="file" id="files" name="files" accept=".jpg,.jpeg,.png" multiple />
                                <div class="preview-list d-flex mt-2" id="preview"></div>
                            </div>
                            <div class="col-lg-4 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">–ó–∞–≥—Ä—É–∑–∏—Ç—å</button>
                            </div>
                        </div>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <a asp-action="Login" asp-controller="Account" class="alert-link">–í–æ–π–¥–∏—Ç–µ</a> –∏–ª–∏ <a asp-action="Register" asp-controller="Account" class="alert-link">–∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä—É–π—Ç–µ—Å—å</a> —á—Ç–æ–±—ã –∑–∞–≥—Ä—É–∂–∞—Ç—å —Ñ–æ—Ç–æ.
                </div>
            }

            <!-- Photos List -->
            <div class="row">
                <div class="col-12 mb-3">
                    <h4>@ViewBag.Title (@Model?.Count ?? 0)</h4>
                </div>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-4 photo-grid">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var photo in Model)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <img src="@photo.Path" class="card-img-top" alt="@photo.FileName" />
                                <div class="card-body">
                                    <h6 class="card-title text-truncate" title="@photo.FileName">@photo.FileName</h6>
                                    <p class="text-muted mb-2 small">@photo.UploadDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</p>
                                    @if (SignInManager.IsSignedIn(User) && photo.UserId == user?.Id)
                                    {
                                        <form method="post" action="@Url.Action("Delete")" onsubmit="return confirm('–£–¥–∞–ª–∏—Ç—å?');">
                                            <input type="hidden" name="photoId" value="@photo.Id" />
                                            <button class="btn btn-sm btn-outline-danger" type="submit">–£–¥–∞–ª–∏—Ç—å</button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-light text-center">–ù–µ—Ç —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–π</div>
                    </div>
                }
            </div>
        </div>

        <script>
            const filesInput = document.getElementById('files');
            if (filesInput) {
                filesInput.addEventListener('change', e => {
                    const preview = document.getElementById('preview');
                    preview.innerHTML = '';
                    Array.from(filesInput.files).slice(0,6).forEach(file => {
                        const img = document.createElement('img');
                        img.src = URL.createObjectURL(file);
                        img.onload = () => URL.revokeObjectURL(img.src);
                        preview.appendChild(img);
                    });
                });
            }
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    </body>
</html>
