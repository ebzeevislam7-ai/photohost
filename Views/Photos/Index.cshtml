@* Razor –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏–µ –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Å–ø–∏—Å–∫–∞ —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–π –∏ —Ñ–æ—Ä–º—ã –∑–∞–≥—Ä—É–∑–∫–∏ *@

@model List<PhotoHost.Models.Photo>

@{
        ViewData["Title"] = ViewBag.Title ?? "Photohost";
}

<!doctype html>
<html lang="ru">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>@ViewData["Title"]</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
        <style>
            body { background: linear-gradient(135deg,#667eea 0%,#764ba2 100%); min-height:100vh; }
            .app-shell { max-width:1100px; margin:32px auto; }
            .card-upload { border-radius:12px; box-shadow:0 8px 40px rgba(0,0,0,0.12); }
            .photo-grid img { width:100%; height:200px; object-fit:cover; border-radius:8px; }
            .btn-primary { background:linear-gradient(135deg,#667eea,#764ba2); border:0 }
            .preview-list img{ max-width:120px; max-height:80px; object-fit:cover; margin-right:8px; border-radius:6px }
        </style>
    </head>
    <body>
        <div class="container app-shell">
            <div class="text-center text-white mb-4">
                <h1 class="fw-bold">üì∏ Photohost</h1>
                <p class="lead">–ó–∞–≥—Ä—É–∑–∏—Ç–µ —Ñ–æ—Ç–æ ‚Äî —Å–µ—Ä–≤–µ—Ä–Ω–∞—è —á–∞—Å—Ç—å —Ä–∞–±–æ—Ç–∞–µ—Ç –æ—Ç–¥–µ–ª—å–Ω–æ</p>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <div class="card card-upload mb-4 p-4">
                <form id="uploadForm" method="post" action="@Url.Action("Upload")" enctype="multipart/form-data">
                    <div class="row g-3 align-items-center">
                        <div class="col-lg-8">
                            <label class="form-label">–í—ã–±–µ—Ä–∏—Ç–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è (.jpg, .jpeg, .png)</label>
                            <input class="form-control" type="file" id="files" name="files" accept=".jpg,.jpeg,.png" multiple />
                            <div class="preview-list d-flex mt-2" id="preview"></div>
                        </div>
                        <div class="col-lg-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">–ó–∞–≥—Ä—É–∑–∏—Ç—å</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="row">
                <div class="col-12 mb-3 text-white">
                    <h4>–í—Å–µ —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–∏ (@Model?.Count ?? 0)</h4>
                </div>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-4 photo-grid">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var photo in Model)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <img src="@photo.Path" class="card-img-top" alt="@photo.FileName" />
                                <div class="card-body">
                                    <h6 class="card-title text-truncate" title="@photo.FileName">@photo.FileName</h6>
                                    <p class="text-muted mb-2 small">@photo.UploadDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</p>
                                    <form method="post" action="@Url.Action("Delete")" onsubmit="return confirm('–£–¥–∞–ª–∏—Ç—å?');">
                                        <input type="hidden" name="photoId" value="@photo.Id" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit">–£–¥–∞–ª–∏—Ç—å</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-light text-center">–ù–µ—Ç –∑–∞–≥—Ä—É–∂–µ–Ω–Ω—ã—Ö —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–π</div>
                    </div>
                }
            </div>
        </div>

        <script>
            const filesInput = document.getElementById('files');
            const preview = document.getElementById('preview');
            filesInput?.addEventListener('change', e => {
                preview.innerHTML = '';
                Array.from(filesInput.files).slice(0,6).forEach(file => {
                    const img = document.createElement('img');
                    img.src = URL.createObjectURL(file);
                    img.onload = () => URL.revokeObjectURL(img.src);
                    preview.appendChild(img);
                });
            });
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    </body>
</html>
